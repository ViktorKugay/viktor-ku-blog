{
  "name": "viktor-ku-blog",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "author": "Viktor Kugay",
  "email": "v.e.kugay@gmail.com",
  "scripts": {
    "dev": "next dev",
    "build": "yarn build:next",
    "start": "next start",
    "export": "next export",
    "build:next": "next build",
    "postbuild": "next-on-netlify",
    "typecheck": "tsc --noEmit",
    "test": "jest --passWithNoTests",
    "lint": "run-p lint:*",
    "lint:css": "stylelint 'src/**/*.scss'",
    "lint:js": "eslint 'src/**/*.{ts,tsx,js}'",
    "format": "run-p format:*",
    "format:js": "prettier --write 'src/**/*.{ts,tsx,js}'",
    "format:json": "prettier --write 'src/**/*.json'",
    "format:css": "prettier --write 'src/components/**/*.scss' && stylelint --fix 'src/components/**/*.scss'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "HOOK=true yarn typecheck && yarn test",
      "post-checkout": "yarnhook",
      "post-merge": "yarnhook",
      "post-rewrite": "yarnhook"
    }
  },
  "lint-staged": {
    "*.css": [
      "prettier --write",
      "stylelint --fix --config ./.stylelintrc-format"
    ],
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "classnames": "2.2.6",
    "identity-obj-proxy": "3.0.0",
    "lerp": "1.0.3",
    "lodash": "4.17.20",
    "next": "10.0.8",
    "next-on-netlify": "2.9.0",
    "postcss-custom-media": "7.0.8",
    "postcss-custom-properties": "9.1.1",
    "postcss-flexbugs-fixes": "4.2.1",
    "postcss-import": "12.0.1",
    "postcss-nested": "4.2.3",
    "postcss-preset-env": "6.7.0",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "sass": "1.32.8",
    "react-three-fiber": "5.1.4",
    "three": "0.121.1",
    "threejs-meshline": "2.0.12",
    "typescript": "4.2.3"
  },
  "devDependencies": {
    "@testing-library/dom": "7.26.3",
    "@testing-library/jest-dom": "5.11.5",
    "@testing-library/react": "11.1.0",
    "@types/classnames": "2.2.10",
    "@types/jest": "26.0.8",
    "@types/lodash": "4.14.167",
    "@types/react": "16.9.44",
    "@types/three": "0.126.0",
    "@typescript-eslint/eslint-plugin": "3.7.1",
    "@typescript-eslint/parser": "3.7.1",
    "babel-jest": "26.6.3",
    "eslint": "7.12.1",
    "eslint-plugin-react": "7.21.5",
    "husky": "4.2.5",
    "jest": "25.1.0",
    "lint-staged": "10.2.11",
    "npm-run-all": "4.1.5",
    "prettier": "2.0.5",
    "stylelint": "13.7.2",
    "stylelint-config-idiomatic-order": "8.1.0",
    "ts-jest": "26.1.4",
    "yarnhook": "0.4.3"
  },
  "prettier": {
    "singleQuote": true,
    "bracketSpacing": false,
    "trailingComma": "all",
    "printWidth": 100,
    "tabWidth": 2
  }
}
